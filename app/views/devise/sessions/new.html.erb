<div class="container">
  <h1 class="text-center">Task List Assignment</h1>
  <h2 class="text-center">Kadince</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-login" }) do |f| %>
    <% if flash[:alert] %>
      <div class="alert alert-danger" role="alert">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control" %>
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "form-control" %>

    <%= f.submit "Log In", class: "btn-custom" %>
    <%= link_to "Sign up", new_registration_path(resource_name), class: "btn-custom" %>
  <% end %>
</div>
